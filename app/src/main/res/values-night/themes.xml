<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DisplayInfo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_dark_primary</item>
        <item name="colorOnPrimary">@color/orange_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/orange_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/orange_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/orange_dark_secondary</item>
        <item name="colorOnSecondary">@color/orange_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/orange_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/orange_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/orange_dark_tertiary</item>
        <item name="colorOnTertiary">@color/orange_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/orange_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/orange_dark_onTertiaryContainer</item>
        <item name="colorError">@color/orange_dark_error</item>
        <item name="colorErrorContainer">@color/orange_dark_errorContainer</item>
        <item name="colorOnError">@color/orange_dark_onError</item>
        <item name="colorOnErrorContainer">@color/orange_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/orange_dark_background</item>
        <item name="colorOnBackground">@color/orange_dark_onBackground</item>
        <item name="colorSurface">@color/orange_dark_surface</item>
        <item name="colorOnSurface">@color/orange_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/orange_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/orange_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/orange_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/orange_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/orange_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/orange_dark_primaryInverse</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

    </style>

    <style name="Launcher.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="colorPrimary">@color/orange_dark_primary</item>

    </style>

</resources>